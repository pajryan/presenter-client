{
  "name": "presenter",
  "version": "1.0.14",
  "main": "main.js",
  "description": "presentation display",
  "author": "PJR",
  "scripts": {
    "start": "electron .",
    "publish": "build --mac --win -p always"
  },
  "devDependencies": {
    "electron": "^1.7.9",
    "electron-builder": "^20.8.2"
  },
  "dependencies": {
    "electron-log": "^1.3.0",
    "electron-updater": "^2.21.4"
  },
  "build": {
    "appId": "com.github.iffy.electronupdaterexample",
    "mac": {
      "category": "your.app.category.type",
      "target": [
        "zip",
        "dmg"
      ]
    },
    "win": {
      "target": "nsis"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "pajryan",
        "repo": "presenter-client"
      }
    ]
  }
}
